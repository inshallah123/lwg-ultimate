{
  "name": "littlewhitegoose",
  "version": "1.0.0",
  "description": "A beautiful desktop calendar application",
  "main": "electron/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:clean": "node scripts/dev.js",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:localhost:5173 && electron .",
    "dev:watch": "wait-on tcp:5173 && nodemon --exec electron .",
    "build": "tsc && vite build",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "calendar",
    "desktop",
    "electron",
    "react"
  ],
  "author": "yyh",
  "license": "MIT",
  "dependencies": {
    "@esbuild/win32-x64": "^0.25.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "wait-on": "^7.2.0"
  }
}
