{
  "name": "littlewhitegoose",
  "version": "1.0.2",
  "description": "A beautiful desktop calendar application",
  "main": "electron/electron/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:clean": "node scripts/dev.js",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && wait-on tcp:localhost:5173 && electron .",
    "dev:watch": "wait-on tcp:5173 && nodemon --exec electron .",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:electron && vite build",
    "start": "electron .",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "npx tsx src/tests/fullTestSuite.ts",
    "test:quick": "npx tsx src/tests/runTests.ts",
    "test:full": "npx tsx src/tests/fullTestSuite.ts",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "calendar",
    "desktop",
    "electron",
    "react"
  ],
  "author": "yyh",
  "license": "MIT",
  "dependencies": {
    "@esbuild/win32-x64": "^0.25.9",
    "@types/better-sqlite3": "^7.6.13",
    "electron-updater": "^6.6.2",
    "lunar-javascript": "^1.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "com.littlewhitegoose.calendar",
    "productName": "小白鹅日历",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/**/*.ts",
      "!electron/tsconfig.json"
    ],
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "YYH"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "inshallah123",
        "repo": "lwg-ultimate",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "wait-on": "^7.2.0"
  }
}
